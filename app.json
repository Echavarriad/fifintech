{
  "expo": {
    "name": "fifintech",
    "slug": "fifintech",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/FiFintech.Co.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSFaceIDUsageDescription": "Esta aplicaci√≥n utiliza Face ID para proporcionar un acceso seguro y conveniente a tu cuenta.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "bundleIdentifier": "com.echavarriad.fifintech"
    },
    "android": {
      "icon": "./assets/FiFintech.Co.png",
      "adaptiveIcon": {
        "foregroundImage": "./assets/FiFintech.Co.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.echavarriad.fifintech",
      "versionCode": 4,
      "permissions": [
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.WAKE_LOCK",
        "android.permission.SYSTEM_ALERT_WINDOW"
      ],
      "allowBackup": false,
      "largeHeap": true,
      "usesCleartextTraffic": true,
      "softwareKeyboard": {
        "adjustResize": true
      },
      "jsEngine": "hermes",
      "enableProguardInReleaseBuilds": true,
      "enableSeparateBuildPerCPUArchitecture": false
    },
    "web": {
      "favicon": "./assets/FiFintech.Co.png"
    },
    "plugins": [
      "expo-font",
      "expo-local-authentication"
    ],
    "extra": {
      "eas": {
        "projectId": "7db0b1ad-0adc-4475-80b4-7804b483c845"
      }
    }
  }
}
